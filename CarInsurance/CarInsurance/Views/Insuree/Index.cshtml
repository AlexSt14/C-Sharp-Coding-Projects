@model IEnumerable<CarInsurance.Models.Insurance>
@Styles.Render("~/Content/homepage.css")


@{
    ViewBag.Title = "Cheap Car Insurance Quotes";
}

<h2>Car insurance request!</h2>
<h4>Listed prices are prices per month.</h4>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmailAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOfBirth)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CarYear)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CarMake)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CarModel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DUI)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SpeedingTickets)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CoverageType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quote)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        using (Html.BeginForm("CalculateQuote", "Insuree", FormMethod.Post))
            {
                <input type="hidden" name="Id" value="@item.Id" />
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmailAddress)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateOfBirth)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CarYear)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CarMake)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CarModel)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DUI)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SpeedingTickets)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CoverageType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quote)
                    </td>                   
                    <td>
                        <button class=" btn btn-block" id="quoteButton">Get Price</button>
                    </td>                    
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, htmlAttributes: new { @class = "actionButtons" })
                        @Html.ActionLink("Details", "Details", new { id = item.Id }, htmlAttributes: new { @class = "actionButtons" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, htmlAttributes: new { @class = "actionButtons" })
                    </td>
                </tr>
            }        
    }

</table>
